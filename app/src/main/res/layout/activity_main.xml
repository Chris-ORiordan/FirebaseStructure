    <LinearLayout
        android:id="@+id/layoutUserGoingOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User who is going out"/>

        <Spinner
            android:id="@+id/spinnerUserGoingOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="User"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVenueGoingTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUserGoingOut"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue they're going to"/>

        <Spinner
            android:id="@+id/spinnerVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="Venue"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutVenueGoingTo"
        android:text="Add"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_below="@id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewFeed"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/buttonGo"
        android:layout_below="@id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Experiment"
        android:layout_margin="20dp"/>

</RelativeLayout>